mixin createProjectForm(project = {})
  form.agregar-proyecto(action=`/new-project/${project.id || ''}` method="POST")
    .campo
      label(for="name") Nombre Proyecto:
      input(type="text" id="name" name="name" placeholder="Nombre Proyecto" value=project.name)
    .campo.enviar
      input(type="submit" value=`${project.name ? 'Update' : 'Save'}` class="boton")